{
    "description": "A simple graphics experiment.",
    "license": "proprietary",
    "authors": [
        "initkfs"
    ],
    "copyright": "Copyright Â© 2022, initkfs",
    "name": "deltotum",
    "configurations": [
        {
            "name": "app-dev",
            "versions": [
                "dev",
                "SdlBackend",
                "DmLayoutCompact"
            ],
            "targetType": "executable",
            "targetName": "dm",
            "platforms": [
                "linux"
            ],
            "excludedSourceFiles": [
                "src/api/dm/addon/*"
            ]
        },
        {
            "name": "app-dev-addon",
            "versions": [
                "dev",
                "SdlBackend",
                "DmLayoutCompact",
                "DmAddon"
            ],
            "targetType": "executable",
            "targetName": "dm",
            "platforms": [
                "linux"
            ]
        },
        {
            "name": "app-dist",
            "versions": [
                "SdlBackend",
                "DmAddon",
                "DmLayoutCompact"
            ],
            "targetType": "executable",
            "targetName": "dm-dist",
            "platforms": [
                "linux"
            ]
        },
        {
            "name": "app-lib",
            "versions": [
                "dev",
                "SdlBackend"
            ],
            "targetType": "dynamicLibrary",
            "targetName": "dm",
            "platforms": [
                "linux"
            ]
        },
        {
            "name": "app-trace",
            "versions": [
                "dev",
                "SdlBackend"
            ],
            "targetType": "executable",
            "targetName": "dm",
            "platforms": [
                "linux"
            ],
            "dflags": [
                "-ftime-trace",
                "-ftime-trace-file=$PACKAGE_DIR/trace.json"
            ],
            "postBuildCommands": [
                "timetrace2txt $PACKAGE_DIR/trace.json --tsv $PACKAGE_DIR/trace.tsv -o $PACKAGE_DIR/trace.txt"
            ],
            "excludedSourceFiles": [
                "src/api/dm/addon/*"
            ]
        }
    ],
    "buildRequirements": [
        "disallowDeprecations",
        "allowWarnings"
    ],
    "sourcePaths": [
        "./src"
    ],
    "importPaths": [
        "./src",
        "./libs/sdl3",
        "./libs/ffmpeg"
    ],
    "dependencies": {
        "bindbc-loader": "~>1.0.3"
    },
    "dflags": [
        "-dip1000",
        "-preview=in",
        "-preview=fixAliasThis",
        "-Xcc=-fuse-ld=lld",
        "-J=./data",
        "-P=-I./libs/sdl3/SDL_lib",
        "-P=-I./libs/ffmpeg/include"
    ],
    "lflags": [
        "-L./libs/sdl3",
        "-L./libs/ffmpeg/lib",
        "-rpath=./libs/sdl3"
    ],
    "libs": ["SDL3", "SDL3_image", "SDL3_mixer", "SDL3_ttf", "avcodec", "avdevice", "avfilter", "avformat", "avutil", "swresample", "swscale"],
    "versions": [
        "Cairo116"
    ]
}