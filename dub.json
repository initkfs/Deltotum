{
    "description": "A simple graphics experiment.",
    "license": "proprietary",
    "authors": [
        "initkfs"
    ],
    "copyright": "Copyright Â© 2022, initkfs",
    "name": "deltotum",
    "configurations": [
        {
            "name": "app-dev",
            "versions": [
                "dev",
                "SdlBackend",
                "ExtensionLua",
                "DmCtorDsl"
            ],
            "targetType": "executable",
            "targetName": "dm",
            "platforms": [
                "linux"
            ],
            "excludedSourceFiles": [
                "src/dm/addon/*"
            ]
        },
        {
            "name": "app-dev-addon",
            "versions": [
                "dev",
                "SdlBackend",
                "ExtensionLua",
                "DmCtorDsl",
                "DmAddon"
            ],
            "targetType": "executable",
            "targetName": "dm",
            "platforms": [
                "linux"
            ]
        },
        {
            "name": "app-dist",
            "versions": [
                "SdlBackend",
                "DmAddon",
                "EventBusCoreEvents"
            ],
            "targetType": "executable",
            "targetName": "dm-dist",
            "platforms": [
                "linux"
            ]
        },
        {
            "name": "app-lib",
            "versions": [
                "dev",
                "SdlBackend"
            ],
            "targetType": "dynamicLibrary",
            "targetName": "dm",
            "platforms": [
                "linux"
            ]
        },
        {
            "name": "app-trace",
            "versions": [
                "dev",
                "SdlBackend"
            ],
            "targetType": "executable",
            "targetName": "dm",
            "platforms": [
                "linux"
            ],
            "dflags-ldc": [
                "--ftime-trace",
                "--ftime-trace-file=$PACKAGE_DIR/trace.json"
            ],
            "postBuildCommands": [
                "timetrace2txt $PACKAGE_DIR/trace.json --tsv $PACKAGE_DIR/trace.tsv -o $PACKAGE_DIR/trace.txt"
            ],
            "excludedSourceFiles": [
                "src/dm/addon/*"
            ]
        }
    ],
    "buildRequirements": [
        "disallowDeprecations",
        "allowWarnings"
    ],
    "sourcePaths": [
        "./src"
    ],
    "importPaths": [
        "./src"
    ],
    "dependencies": {
        "bindbc-sdl": "~>1.2.1"
    },
    "dflags": [
        "-dip1000",
        "-preview=in",
        "-preview=fixAliasThis",
        "-J=./data"
    ],
    "versions": [
        "SDL_Image",
        "SDL_TTF",
        "SDL_2020",
        "SDL_Mixer_202",
        "Cairo116"
    ]
}